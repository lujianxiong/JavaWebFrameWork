<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.daxiong.vo.UserMapper">

	<select id="selectAll" resultType="cn.daxiong.vo.User">
		select * from user
	</select>
	
	<insert id="add" parameterType="cn.daxiong.vo.User" useGeneratedKeys="true">
		insert into user(username,password) values(#{username},#{password})
	</insert>
	
	<delete id="remove">
		deletes from user where id=#{id}
	</delete>
</mapper>